<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  
  <div class="container">
    <br>
    <div class="card">
      <div class="card-body">
        <h1>Perguntas</h1>
        <a href="/ask" class="btn btn-primary">Perguntar</a>
      </div>
    </div>
    <br>
    <% asks.forEach(ask => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <h3><%= ask.title %></h3>
        </div>
        <div class="card-footer">
          <a href="/answer/<%= ask.id %>" class="btn btn-primary">
            Responder
          </a>
        </div>
      </div>

    <% }) %>

  </div>
  <%- include('partials/footer.ejs') %>