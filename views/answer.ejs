<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="card">
      <div class="card-body">
        <h1><%= ask.title %></h1>
        <p><%= ask.description %></p>
      </div>
    </div>
    <br>

    <div class="card">
      <div class="card-header">
        <h3>Responda</h3>
      </div>
      <div class="card-body">
        <form action="/saveanswer" method="POST">
          <label for="">Resposta</label>
          <textarea name="body" placeholder="Digite aqui a sua resposta..." class="form-control" cols="30" rows="5"></textarea>
          <br>
          <input type="hidden" name="askId" value="<%= ask.id %>">
          <button class="btn btn-primary">Responder</button>
        </form>
      </div>
    </div>
    <br><br>
    <div class="card" >
      <div class="card-header">
        <h3>Respostas</h3>
      </div>
      <div class="card-body">
        <%  answers.forEach(answer => { %>
          - <%= answer.createdAt %> : <%= answer.body %><br><br>
        <% }) %>
      </div>
    </div>
    <br><br>

  </div>
  <%- include('partials/footer.ejs') %>